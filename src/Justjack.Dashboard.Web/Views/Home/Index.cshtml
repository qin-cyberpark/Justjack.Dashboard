@{
    ViewData["Title"] = "Home";
}

@section scripts{
    <script type="text/javascript">
        $(function () {
            "use strict";

            //set layout skin
            $("body").removeClass("skin-blue").addClass("skin-green");

            var site = new SiteApp();

            site.init();
            //binding
            $("#lnkDashboard").click(function () {
                site.show("Dashboard");
            });
            $("#lnkSellingOverall").click(function () {
                site.show("SellingOverall");
            });
            $("#lnkSellingSingle").click(function () {
                site.show("SellingSingle");
            });
            $("#btn-signout").click(function () {
                site.signout();
            });

            //init
            site.show("Dashboard");
        });
    </script>
}